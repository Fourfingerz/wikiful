<h1>There are <%= @category.articles.count(:title) %> articles filed under <%= @category.name %> </h1>
<% @category.articles.order(:created_at).each do |article| %>
	<div>
		<h3><%= link_to article.title, article %></h3>
			<p>Published on <%= article.created_at.strftime('%b %d, %Y')%></p>
	</div>
<% end %>	
